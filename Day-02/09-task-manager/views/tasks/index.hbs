<h1>Task Manager</h1>
<hr>
<h3>
	<span class="completed">{{completedCount}}</span>
	<span> / </span>
	<span>{{list.length}}</span>
</h3>
<ol>
	{{#each list}}
	<li>
		{{#if isCompleted}}
			<span class="completed">{{this.name}}</span>
		{{else}}
			<span>{{this.name}}</span>
		{{/if}}
		<span>
			<form method="post" action="/tasks/toggle">
				<input type="hidden" name="taskId" value="{{this.id}}">
				<input type="submit" value="Toggle">
			</form>
		</span>
	</li>
	{{/each}}
</ol>
<a href="/tasks/new">Create New</a>